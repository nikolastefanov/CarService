@model EditCarViewModel

<h1 class="text-center mt-2">Edit car</h1>
<div class="row mt-4 mb-4">
    <div id="card" class="card col-6 col-lg-3 game-card h-100 m-auto">
        <img id="card-image"
             src="https://s1.cdn.autoevolution.com/images/news-pictures-600x/opel-teases-mystery-car-ahead-of-moscow-show-85300-7.jpg"
             class="card-img-top img-fluid card-image">

    </div>

    <form class="col-6 col-lg-9" method="post">
        <div class="form-group">
            <label asp-for="Make">Make</label>
            <input asp-for="Make" type="text" class="form-control" placeholder="Make, etc...">
            <span asp-validation-for="Make" class="small text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Model">Model</label>
            <input asp-for="Model" type="text" class="form-control" placeholder="Make, etc...">
            <span asp-validation-for="Model" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label for="year-input">Year</label>
            <input asp-for="Year" type="number" class="form-control" placeholder="Year, etc...">
            <span asp-validation-for="Model" class="small text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImageUrl">Image URL</label>
            <input asp-for="ImageUrl" type="text" class="form-control" placeholder="Image Url, etc...">
            <span asp-validation-for="ImageUrl" class="small text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PlateNumber">Plate Number</label>
            <input asp-for="PlateNumber" type="text" class="form-control" placeholder="Image Url, etc...">
            <span asp-validation-for="PlateNumber" class="small text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IssueTypeId"></label>
            <select asp-for="IssueTypeId" class="form-control">
                @foreach (var category in Model.IssueTypes)
                {
                   <option value="@category.Id">@category.Name</option>
                  }
            </select>
            <span asp-validation-for="IssueTypeId" class="small text-danger"></span>
        </div>

        <div class="text-center">
            <input class="btn btn-block btn-primary" type="submit" value="Save" />
        </div>
      

        <button asp-controller="Cars" asp-action="DeleteCar" asp-route-carId="@Model.Id"
                class="btn btn-block btn-danger">
            Delete !!!
        </button>
    </form>
</div>