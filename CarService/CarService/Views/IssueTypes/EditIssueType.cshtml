@model EditIssueTypeViewModel



@{
    this.ViewData["Title"] = "Edit IssueType";
}

<div class="text-center">
    <h1 class="display-4">@this.ViewData["Title"]</h1>
</div>



<div class="row">                                                                                          
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">                                      
        <!--<h2 class="heading-margin text-center">this.ViewData["Title"]</h2> -->                                               
        <form method="post">                                                                               
            <div class="form-group">                                                                       
                <label asp-for="Name"></label>                                                             
                <input asp-for="Name" class="form-control" placeholder="Name, etc...">                     
                <span asp-validation-for="Name" class="small text-danger"></span>                          
            </div>                                                                                         
                                                                                                           
                                                                                                           
            <div class="form-group">                                                                       
                <label asp-for="ImageUrl"></label>                                                         
                <input asp-for="ImageUrl" class="form-control" placeholder="Your fine URL here...">        
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>                      
            </div>                                                                                         
                                                                                                           
            <div class="text-center">                                                                      
                <input class="btn btn-primary" type="submit" value="Save" />                               
            </div>                                                                                         
        </form>                                                                                            
    </div>                                                                                                 
</div>                                                                                                     



<div class="text-center">

    <a asp-controller="IssueTypes" asp-action="DeleteIssueType" asp-route-issueTypeId="@Model.Id" class="btn btn-danger ">Delete IssueType</a>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}





