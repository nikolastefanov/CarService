@model ReviewInputFormModel

@{
    this.ViewData["Title"] = "Comments";
}



<script src="~/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "",
        plugins: [
            "image paste table link code media textpattern"
        ]
    });
</script>


<form method="post" asp-controller="Reviews" asp-action="Create">
    <div class="text-center">

        <h3>@this.ViewData["Title"]</h3>


        <br />
        <br />
        <div class="form-group">
            <label asp-for="Content"></label>
            <textarea asp-for="Content" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Content" class="small text-danger"></span>
        </div>

        <br />
        <br />


        <input type="submit" class="btn btn-primary" />
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
