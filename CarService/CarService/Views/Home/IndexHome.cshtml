
@model List<IndexHomeViewModel>

@{
    this.ViewData["Title"] = "Services";
}

<div class="row">
    <div class="col-xl-6 col-md-8 col-sm-12">

                     <div class="text-center">
                         <h1 class="display-4">@this.ViewData["Title"]</h1>
                     </div>

            <div class="row">
                            @foreach (var issueType in Model)
                            {
                                         <div class="col-md-4">
                                             <div class="card mb-3">
                                                 <img class="card-img-top" src="@issueType.ImageUrl" alt="@issueType.Name ">
                                                 <div class="card-body text-center">
                                                     <a asp-controller="Cars" asp-action="Add" class="btn btn-primary">@issueType.Name</a>
                                                 </div>
                                             </div>
                                         </div>
                             }
            </div>
    </div>
</div>
