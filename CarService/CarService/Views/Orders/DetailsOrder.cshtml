@model DetailsOrderViewModel

@{ 
    this.ViewData["Title"] = "Details Order";
}


<div class="container-fluid text-center">

    <h2>@this.ViewData["Title"]</h2>

</div>


<div class="container">
    <div class="section">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <div class="page-header text-center">
                    <h2 id="tables">Listed order for: </h2>
                    <h3 class="font-weight-bold font-italic">Name: @Model.UserName </h3>
                    <h3 class="font-weight-bold font-italic"> Price: @Model.TotalPrice  Create: @Model.CreateOn</h3>
                </div>

                <div class="component">
                    <table class="table table-hover">
                        <thead class=" table-active">
                            <tr>
                                <th scope="col">Description</th>
                                <th scope="col">Price To Work</th>
                          
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var work in Model.Works)
                            {
                                <tr class="table-light">
                                    <td>@work.Description</td>

                                    <td>@work.Price</td>
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                
                    <a class="btn btn-block btn-primary text-white mb-3" href="/Orders/AllOrders">All Orders</a>
               
            </div>
        </div>
    </div>
</div>
