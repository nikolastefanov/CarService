
@using CarService.Data.Models
@using CarService.Services.Mechanics
@using CarService.Infrastructure
@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@inject IMechanicsService Mechanics

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        var userId = User.Id();
        var userIsMechanic = Mechanics.IsMechanic(userId);
        var userIsAdmin = User.IsAdmin();



        @if (userIsAdmin || userIsMechanic)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Mechanics" asp-action="Become">Become Mechanic</a>
            </li>
        }
        @if (userIsAdmin)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Cars" asp-action="All">Administration for Cars</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Orders" asp-action="AllOrderAdmin">Administration for Orders</a>
            </li>

        }


        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
